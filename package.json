{
	"name": "klavaro",
	"displayName": "klavaro",
	"description": "",
	"icon": "images/logo.png",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"contributes": {
		"configuration": {
			"title": "Klavaro",
			"properties": {
				"klavaro.activated": {
					"type": "boolean",
					"default": true,
					"description": "Activate replacement x-system entries with Esperanto alphabet automatically for all documents."
				},
				"klavaro.showButton": {
					"type": "boolean",
					"default": true,
					"description": "Provide a button into status bar to activate or deactivate the extension."
				}
			}
		}
	},
	"main": "./extension.js",
